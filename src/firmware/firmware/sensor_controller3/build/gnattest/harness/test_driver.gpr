with "aunit";
with "test_sensor_controller_testing.gpr";

project Test_Driver is

   for Languages use ("Ada");
   for Main use ("test_runner.adb");
   for Exec_Dir use ".";

   package Builder is
      for Global_Configuration_Pragmas use "suppress.adc";
   end Builder;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-g", "-O1", "-gnatyM0", "-gnata");
   end Compiler;

   package Ide renames test_sensor_controller_testing.Ide;

   package GNATtest is
      for GNATTest_Mapping_File use "gnattest.xml";
   end GNATtest;

end Test_Driver;
